@model MessagingApp.Models.AuthClass.Register
@{
    ViewData["Title"] = "Register";
}

<h1>Register</h1>

<h2>@ViewBag.message</h2>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Register">
            <h2>Create a new account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="UserName" class="form-control"  aria-required="true" />
                <label asp-for="UserName"></label>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            
            <div class="form-floating">
                <input asp-for="Email" class="form-control"  aria-required="true" />
                <label asp-for="Email"></label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Password" class="form-control" type = "password"  aria-required="true" />
                <label asp-for="Password"></label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div>
    <div>

                    <p>
                        <a asp-action="Login">Back to Login</a>
                    </p>

                </div>
    </div>