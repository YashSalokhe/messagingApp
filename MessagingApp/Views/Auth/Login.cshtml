@model MessagingApp.Models.AuthClass.Login
@{
    ViewData["Title"] = "Login";
}


<h1>@ViewData["Title"]</h1>
<h2>@ViewBag.message</h2>
<div class="row">
    <div class="col-md-4">
        <section>
            <form asp-action="Login">
                <h2>Use a local account to log in.</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Email" class="form-control" placeholder=Email autocomplete="username" aria-required="true" />
                    <label asp-for="Email" class="form-label"></label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Password"  class="form-control" placeholder=Password id = "myInput" autocomplete="current-password" aria-required="true" type = "password"/>
                    <label asp-for="Password" class="form-label"></label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <input type="checkbox" onclick="myFunction()">Show Password
                    <script>
                    function myFunction() {
                    var x = document.getElementById("myInput");
                    if (x.type === "password") {
                          x.type = "text";
                       } else {
                          x.type = "password";
                       }
                       }
                    </script>
                <div>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                </div>
                <div>

                    <p>
                        <a asp-action="Register">Register as a new user</a>
                    </p>

                </div>
            </form>
        </section>
    </div>
    </div>

