    <section class="vh-100">
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-6 text-black">

        <div class="px-5 ms-xl-4">
          <i class="fas fa-crow fa-2x me-3 pt-5 mt-xl-4" style="color: #709085;"></i>
          <span class="h1 fw-bold mb-0">Logo</span>
        </div>

        <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">

          <form asp-action="Login" style="width: 23rem;" >
              <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Log in</h3>

             <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-outline mb-4">
                    <input asp-for="Email" class="form-control form-control-lg" placeholder=Email autocomplete="username" aria-required="true" />
                    <label asp-for="Email" class="form-label"></label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-outline mb-4">
                    <input asp-for="Password"  class="form-control form-control-lg" placeholder=Password id = "myInput" autocomplete="current-password" aria-required="true" type = "password"/>
                    <label asp-for="Password" class="form-label"></label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <input type="checkbox" onclick="myFunction()">Show Password
                    <script>
                    function myFunction() {
                    var x = document.getElementById("myInput");
                    if (x.type === "password") {
                          x.type = "text";
                       } else {
                          x.type = "password";
                       }
                       }
                    </script>

            <div class="pt-1 mb-4">
                    <button id="login-submit" type="submit" class="btn btn-info btn-lg btn-block">Log in</button>
                </div>
                <div>

                    <p>
                        <a asp-action="Register" class="link-info">Register as a new user</a>
                    </p>

                </div>

          </form>

        </div>

      </div>
